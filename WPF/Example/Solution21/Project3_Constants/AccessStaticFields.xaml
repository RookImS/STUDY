<Window x:Class="Project3_Constants.AccessStaticFields"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project3_Constants"
        mc:Ignorable="d"
        Title="Access Static Fields" SizeToContent="WidthAndHeight">
    <TextBlock Background="{x:Static local:Constants.brush}"
               FontSize="{x:Static local:Constants.FontSize}"
               TextAlignment="Center">
        <TextBlock.FontFamily>
            <x:Static Member="local:Constants.fntfam"/>
        </TextBlock.FontFamily>
        Properties from<LineBreak />Static Fields
    </TextBlock>
</Window>
